import PackageDescription

let package = Package(
    name: "XCFrameworks",
    defaultLocalization: "en",
    platforms: [
        .iOS(.v12)
    ],
    products: [
        .library(
            name: "XCFrameworks",
            targets: [
                <% xcframeworks.each do |xcframework| %>
                    "<%= xcframework[:name] %>",
                <% end %>
                ]
            )
    ],
    dependencies: [
    ],
    targets: [
        <% xcframeworks.each do |xcframework| %>
            .binaryTarget(
                name: "<%= xcframework[:name] %>",
                url: "<%= xcframework[:url] %>",
                checksum: "<%= xcframework[:checksum] %>"           
            ),
        <% end %>
    ]
)
